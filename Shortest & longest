/*

SELECT CITY , LENGTH(CITY) 
FROM STATION 
WHERE LENGTH(CITY) in 
((SELECT * FROM (SELECT LENGTH(CITY) FROM STATION ORDER BY LENGTH(CITY)) WHERE ROWNUM = 1),
 (SELECT * FROM (SELECT LENGTH(CITY) FROM STATION ORDER BY LENGTH(CITY) DESC) WHERE ROWNUM = 1))
ORDER BY LENGTH(CITY) ASC , CITY ;

*/


SELECT *
FROM
    (SELECT CITY, LENGTH(CITY)
    FROM STATION
    ORDER BY LENGTH(CITY), CITY)
WHERE ROWNUM = 1
UNION
SELECT *
FROM
    (SELECT CITY, LENGTH(CITY)
    FROM STATION
    ORDER BY LENGTH(CITY) DESC, CITY)
WHERE ROWNUM = 1;
